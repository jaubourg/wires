{
    "author": "Julian Aubourg <j@ubourg.net> (http://jaubourg.net)",
    "bin": {
        "wires": "./lib/bin.js"
    },
    "description": "simple configuration utility with smart module wiring for unobtrusive dependency injection",
    "devDependencies": {
        "coveralls": "3.0.3",
        "eslint": "5.16.0",
        "eslint-config-creative-area": "0.9.0",
        "fs-extra": "7.0.1",
        "nodeunit": "0.11.3",
        "nyc": "14.1.1"
    },
    "engines": {
        "node" : ">=8"
    },
    "eslintConfig": {
        "extends": "creative-area/es6",
        "env": {
            "node": true
        },
        "rules": {
            "global-require": "off",
            "no-sync": "off",
            "prefer-destructuring": "off",
            "prefer-rest-params": "off"
        }
    },
    "license": "MIT",
    "main": "./lib/index.js",
    "name": "wires",
    "nyc": {
        "cache": true,
        "include": [ "lib" ]
    },
    "repository" : {
        "type" : "git",
        "url" : "http://github.com/jaubourg/wires.git"
    },
    "scripts": {
        "coverage": "nyc --eager node test && nyc report --reporter=html",
        "coveralls": "nyc --eager node test && nyc report --reporter=text-lcov | coveralls",
        "test": "node test"
    },
    "version": "4.0.1-pre"
}
